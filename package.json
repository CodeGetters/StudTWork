{
  "name": "studious",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "dev:front": "pnpm -F @studious/front dev",
    "dev:back": "pnpm -F @studious/back start",
    "dev:lint": "pnpm -F @studious/front lint & pnpm -F @studious/back lint",
    "dev:format": "pnpm -F @studious/front format& pnpm -F @studious/back format",
    "build:front": "pnpm -F @studious/front build",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "keywords": [],
  "author": "CodeGetters",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  }
}
